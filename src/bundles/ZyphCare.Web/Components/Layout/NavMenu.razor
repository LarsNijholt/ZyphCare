@using ZyphCare.Web.Core.Contracts
@using ZyphCare.Web.Core.Models

@inject IMenuService MenuService

<MudNavMenu Bordered="true" Color="Color.Primary" Margin="Margin.Dense" Class="pa-2" >
    @foreach (var menuItem in _menuItems)
    {
        <NavMenuItem MenuItem="menuItem" />
    }
</MudNavMenu>


@code {
    private IEnumerable<MenuItem> _menuItems = new List<MenuItem>();

    /// <inheritdoc />
    protected override async Task OnInitializedAsync()
    {
        _menuItems = await MenuService.GetMenuItemsAsync();
    }
}